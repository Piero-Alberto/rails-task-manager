<h1>Editar tarea</h1>
<%= form_with model: @task do |form| %>
  <div>
    <%= form.label :title, "Title" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :details, "Details" %>
    <%= form.text_area :details %>
  </div>
  <div>
    <%= form.submit "Edit Task" %>
  </div>
  <p><%= link_to "Back to list", tasks_path %></p>
<% end %>
